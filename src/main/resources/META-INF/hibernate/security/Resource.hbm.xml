<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
  <class name="com.jason.blog.domain.security.resource.Resource" table="security_resource" lazy="false">
	<cache usage="read-write" region="org.hibernate.cache.StandardQueryCache"/>
    <id name="id" column="id">
      <generator class="uuid"/>
    </id>
    
    <property name="name" not-null="true" type="java.lang.String"></property>
    <property name="value" unique="true" not-null="true" type="java.lang.String"></property>
    <property name="priority" not-null="false" type="java.lang.Integer"></property>
    <set name="authorities" table="security_authority_resource">
    	<key column="resource_id"></key>
    	<many-to-many class="com.jason.blog.domain.security.authority.Authority" column="authority_id"></many-to-many>
    </set>
  </class>
</hibernate-mapping>